<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_90sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/startup_cardview"
    app:cardCornerRadius="@dimen/_4sdp"
    app:cardElevation="@dimen/_4sdp"
    android:layout_marginTop="@dimen/_4sdp"
    android:layout_marginBottom="@dimen/_8sdp"
    android:layout_marginRight="@dimen/_8sdp"
    android:layout_marginLeft="@dimen/_8sdp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_startup"
            android:layout_width="@dimen/_48sdp"
            android:layout_height="@dimen/_48sdp"
            android:src="@drawable/wuzzuf"
            android:layout_marginLeft="@dimen/_24sdp"
            android:layout_centerVertical="true"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/_28sdp">

            <TextView
                android:id="@+id/name_startup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wuzzuf"
                android:textSize="@dimen/_11ssp"
                android:textColor="@color/colorPrimaryDark"
                android:textAllCaps="false"
                android:fontFamily="@string/what_is_startup"
                android:layout_gravity="center"
                android:maxLines="1"/>

            <TextView
                android:id="@+id/field_startup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="JOB"
                android:layout_gravity="center"
                android:textSize="@dimen/_8ssp"
                android:layout_marginTop="@dimen/_4sdp"
                android:maxLines="1"/>

            <Button
                android:id="@+id/go_btn"
                android:layout_width="@dimen/_72sdp"
                android:layout_height="@dimen/_26sdp"
                android:background="@drawable/bg_btn"
                android:text="@string/go"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/_4sdp"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/circle"
            android:layout_width="@dimen/_6sdp"
            android:layout_height="@dimen/_6sdp"
            android:src="@drawable/blue_circle"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/_6sdp"
            android:layout_marginBottom="@dimen/_8sdp"/>

    </RelativeLayout>


</android.support.v7.widget.CardView>